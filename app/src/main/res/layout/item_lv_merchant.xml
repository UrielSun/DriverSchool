<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_pre"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="江西驾校"
                    android:textColor="@color/font_black"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/rb_score"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.15" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/rb_score"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/rb_score"
                    android:text="5.0分"
                    android:textColor="@color/theme_blue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/market_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rb_score"
                    android:layout_marginTop="5dp"
                    android:text="￥2300"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tag_null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#ADADAD" />

                <TextView
                    android:id="@+id/costTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/rb_score"
                    android:text="约23天拿证"
                    android:textSize="12sp"
                    android:textColor="@color/font_gray_light" />


                <TextView
                    android:id="@+id/tv_studentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/market_price_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="123人正在学"
                    android:textColor="@color/font_gray_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_name"
                    android:layout_alignParentRight="true"
                    android:text="2.3km"
                    android:textColor="@color/font_gray_light"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/md_red_300"
                    android:padding="2dp"
                    android:text="红包"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_groupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="报名立即返现金"
                    android:textColor="@color/md_red_300"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>