<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <!-- titlebar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发现"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- titlebar -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.drivingevaluate.view.SlideShowView
                android:id="@+id/ssv_ad"
                android:layout_width="match_parent"
                android:layout_height="140dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/left"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp">

                        <RelativeLayout
                            android:id="@+id/btn_knowledge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_grid_red"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/img_book"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/ic_book" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/img_book"
                                android:text="驾考知识"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <!-- 分割-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:id="@+id/btn_sub1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_grid_gray"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/traffic"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:src="@mipmap/ic_traffic" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/traffic"
                                    android:layout_centerHorizontal="true"
                                    android:text="科目一"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <!-- 分割-->


                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:id="@+id/btn_sub4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_grid_blue"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/car"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:src="@mipmap/ic_car" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/car"
                                    android:layout_centerHorizontal="true"
                                    android:text="科目四"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <!-- 分割-->
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="136dp"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="7dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.6"
                        app:mrl_rippleColor="@color/md_orange_600"
                        app:mrl_rippleOverlay="true">

                        <RelativeLayout
                            android:id="@+id/moment_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_grid_gray">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_nearby" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="10dp"
                                android:text="附近说"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/consult_rl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_grid_red"
                        android:clickable="true">

                        <com.mikepenz.iconics.view.IconicsTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"
                            android:text="{faw-phone} 客服求助"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/ripple"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    app:mrl_rippleAlpha="0.6"
                    app:mrl_rippleColor="@color/md_red_A700"
                    app:mrl_rippleOverlay="true">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/luckyMoney_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/md_red_400">

                            <com.mikepenz.iconics.view.IconicsTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="{faw-money} 红包专区"
                                android:textColor="#FFFFFF"
                                android:textSize="26sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>