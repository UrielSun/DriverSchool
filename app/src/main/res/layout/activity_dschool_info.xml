<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <com.drivingevaluate.view.SlideShowView
                    android:id="@+id/ssv_ad"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#77000000"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交大驾校"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/rb_score"
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3.2"
                        android:stepSize="0.15" />

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/rb_score"
                        android:text="3.5"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvStudentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="报名数:185"
                        android:textColor="#FFFFFF" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通班:"
                        android:textColor="@color/font_gray_light" />

                    <TextView
                        android:id="@+id/tv_ourPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="￥2300起"
                        android:textColor="@color/red"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/tv_marketPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rb_score"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_ourPrice"
                        android:text="￥2300"
                        android:textColor="@color/font_gray_light"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(平均拿证时间 88天)"
                        android:textColor="@color/font_gray_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIP  班:"
                        android:textColor="@color/font_gray_light" />

                    <TextView
                        android:id="@+id/tv_vipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="3780元"
                        android:textColor="@color/red"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rb_score"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_ourPrice"
                        android:text="￥4000"
                        android:textColor="@color/font_gray_light"
                        android:textSize="16sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(平均拿证时间 67天)"
                        android:textColor="@color/font_gray_light" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_loc"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="江西省南昌市昌北经开区" />

                <ImageButton
                    android:id="@+id/btn_map"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_white_nopading"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_bus" />

                <TextView
                    android:id="@+id/tv_dschoolInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_addr"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/btn_map"
                    android:background="@drawable/bg_white"
                    android:drawableRight="@mipmap/ic_forward"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="江西驾驶学校是江西省规模大、设施先进、教学培训规范的国家一类驾驶学校。鲜明的办学特色和突出的办学成绩得到了中国道路运输协会等有关部门和社会各界的广泛关注和赞誉，荣获了“江西省十强驾校”之首、“江西省职业教育先进单位”等称号，被江西省团委、省学联首个授予“江西省大学生素质拓展训练技能培训基地”，也是南昌市车管所直属的机动车驾驶员考试考场。" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/btn_map"
                    android:background="@color/line" />
            </RelativeLayout>
            <!--<include layout="@layout/layout_service" />-->

            <include layout="@layout/layout_coach" />

            <include layout="@layout/layout_intro" />

            <include layout="@layout/layout_comment" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_consult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_grid_gray"
            android:text="在线咨询"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_blue"
            android:text="立即报名"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>