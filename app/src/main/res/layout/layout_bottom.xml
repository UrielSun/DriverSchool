<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/md_grey_300" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/home_tab_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="#0000"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:src="@mipmap/ic_tab_home_normal" />

            <TextView
                android:id="@+id/home_tab_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="主页"
                android:textColor="#9f9f9f"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/merchant_tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/merchant_tab_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="#0000"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:src="@mipmap/ic_tab_merchant_normal" />

            <TextView
                android:id="@+id/merchant_tab_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="找驾校"
                android:textColor="#9f9f9f"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/examination_tab_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="#0000"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:src="@mipmap/ic_tab_examination_normal" />

            <TextView
                android:id="@+id/examination_tab_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="资料"
                android:textColor="#9f9f9f"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/user_tab_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="#0000"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:src="@mipmap/ic_tab_user_normal" />

            <TextView
                android:id="@+id/user_tab_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="我的"
                android:textColor="#9f9f9f"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>