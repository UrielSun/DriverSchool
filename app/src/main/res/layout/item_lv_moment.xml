<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_white_border_nopading_normal"
    android:descendantFocusability="blocksDescendants"
    android:padding="12dp">

    <com.drivingevaluate.view.RoundAngleImageView
        android:id="@+id/avatar_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        app:roundWidth="8dp"
        app:roundHeight="8dp"
        android:src="@mipmap/ic_user_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_moment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_tv"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="08-15 00:00"
                android:textColor="@color/md_grey_500" />

            <TextView
                android:id="@+id/status_moment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="正在学车"
                android:textColor="@color/md_grey_500" />

            <TextView
                android:id="@+id/distance_moment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/status_tv"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:text="0.0km"
                android:textColor="@color/md_grey_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/md_grey_200"/>

        <com.drivingevaluate.view.EmoticonsTextView
            android:id="@+id/content_moment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_grey_600"
            android:text="无" />
        <com.drivingevaluate.view.WrapHeightGridView
            android:id="@+id/images_gv"
            style="@style/GridViewImages"
            android:layout_width="272dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like_moment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/md_grey_500"
                android:text="0赞"/>

            <TextView
                android:id="@+id/comment_moment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/md_grey_500"
                android:layout_toRightOf="@id/like_moment_tv"
                android:layout_marginLeft="8dp"
                android:text="0评论"/>

            <ImageButton
                android:id="@+id/comment_moment_btn"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_comment"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:background="@null"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>