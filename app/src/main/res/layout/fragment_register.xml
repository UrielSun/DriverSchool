<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/account_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="手机号码"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColorHint="@color/md_grey_600"
            app:met_baseColor="@color/md_grey_700"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/theme_blue"
            app:met_errorColor="@color/md_red_A100"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColorHint="@color/md_grey_600"
            android:inputType="textPassword"
            app:met_baseColor="@color/md_grey_700"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="6"
            app:met_clearButton="true"
            app:met_primaryColor="@color/theme_blue"
            app:met_singleLineEllipsis="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/verify_code_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="验证码"
                android:textSize="14sp"
                android:inputType="number"
                android:textColorHint="@color/md_grey_600"
                app:met_baseColor="@color/md_grey_700"
                app:met_floatingLabel="highlight"
                app:met_minCharacters="6"
                app:met_clearButton="true"
                app:met_primaryColor="@color/theme_blue"
                app:met_singleLineEllipsis="true" />

            <Button
                android:id="@+id/verify_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/bg_blue"
                android:layout_marginLeft="8dp"
                android:text="获取验证码"
                android:textColor="@color/md_white_1000"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_blue_corner"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>